<html>
  <head>
    <title>TinyApp</title>
    <!-- <base href="http://localhost:8080/urls"> -->
  </head>
  <body>
    <header>
      <% include ./partials/_header %>
    </header>
    <ul>
      <% for(var i in urls) { %>
        <li>
          <h1>
            <a href=<%= urls[i]["longURL"] %>><%= urls[i]["longURL"] %></a> <p>Shortened URL: http://localhost:8080/u/<%= i %></p>
            <p>Created: <%=urls[i]["date"]%> - Visit count: <%=urls[i]["visitors"]%> - Unique visits: <%=urls[i]["unique"].length%></p>
          </h1>
          <form method="POST" action="/urls/<%= i %>/delete?_method=DELETE">
            <button>Delete</button>
          </form>
          <form method="GET" action="/urls/<%= i %>">
            <button>Edit</button>
          </form>
        </li>
      <% } %>
    </ul>
    <form action="/urls/new" class="text-center">
      <button><h1>Shorten URL</h1></button>
    </form>
  </body>
</html>